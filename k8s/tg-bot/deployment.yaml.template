apiVersion: apps/v1
kind: Deployment
metadata:
  name: tg-bot
  labels:
    app: qracun
    tier: bot
spec:
  replicas: 1
  selector:
    matchLabels:
      app: qracun
      tier: bot
  template:
    metadata:
      labels:
        app: qracun
        tier: bot
    spec:
      imagePullSecrets:
        - name: ghcr-secret
      containers:
        - name: tg-bot
          image: ${NAME_IMAGE_TELEGRAM_BOT}
          command: ["/./start.sh"]
          envFrom:
            - configMapRef:
                name: qracun-config
            - secretRef:
                name: qracun-secret
          volumeMounts:
            - name: shared-data
              mountPath: /grpc_proto         # grpc_proto
              subPath: grpc_proto            # подкаталог в PVC
      volumes:
        - name: shared-data
          persistentVolumeClaim:
            claimName: shared-data-pvc
