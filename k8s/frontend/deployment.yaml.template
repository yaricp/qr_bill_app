apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  labels:
    app: qracun
    tier: frontend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: qracun
      tier: frontend
  template:
    metadata:
      labels:
        app: qracun
        tier: frontend
    spec:
      imagePullSecrets:
        - name: ghcr-secret
      containers:
        - name: frontend
          image: ${NAME_IMAGE_FRONTEND}
          ports:
            - containerPort: 80
